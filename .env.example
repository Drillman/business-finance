# ===========================================
# Business Finance Tracker - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control

# -------------------------------------------
# Database
# -------------------------------------------
DB_USER=businessfinance
DB_PASSWORD=your-secure-database-password-here
DB_NAME=business_finance
DB_PORT=5432

# Full database URL (update host for Docker: use 'db' instead of 'localhost')
DATABASE_URL=postgresql://businessfinance:your-secure-database-password-here@localhost:5432/business_finance

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your-very-long-random-secret-key-here-at-least-32-characters
JWT_REFRESH_SECRET=another-very-long-random-secret-key-at-least-32-characters

# -------------------------------------------
# Server
# -------------------------------------------
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:5173

# -------------------------------------------
# Security
# -------------------------------------------
# Generate with: openssl rand -base64 32
COOKIE_SECRET=your-cookie-secret-at-least-32-characters

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# -------------------------------------------
# WebAuthn (Passkeys)
# -------------------------------------------
# For development: use 'localhost'
# For production: use your domain without https:// (e.g., 'finance.example.com')
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Business Finance Tracker

# Full origin URL (must match exactly what the browser sees)
WEBAUTHN_ORIGIN=http://localhost:5173

# -------------------------------------------
# Production Only (docker-compose.prod.yml)
# -------------------------------------------
# Your domain name (without https://)
# DOMAIN=finance.example.com

# Email for Let's Encrypt SSL certificate notifications
# ACME_EMAIL=your-email@example.com
